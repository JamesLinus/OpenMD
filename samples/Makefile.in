#####################################################
# Makefile for OOPSE samples                        #
#####################################################
# You should not change anything here.              #
#####################################################

TOP=..

SAMPLES=argon water alkane lipid minimizer metals zcons

subdirs :
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE)) || exit 1; done

all : subdirs

install : subdirs
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE) install) || exit 1; done

check : dummy

links : subdirs
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE) links) || exit 1; done

clean :
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE) clean) || exit 1; done

distclean :
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE) distclean) || exit 1; done

devclean :
	@set -e; for i in $(SAMPLES); do (cd $$i; $(MAKE) devclean) || exit 1; done

dummy :

