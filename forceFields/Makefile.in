# Location of the oopse home
OOPSE_HOME=@OOPSE_HOME@
FORCE_PARAM_DIR=@OOPSE_HOME@/share/forceFields/

# BSD install
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
MKINSTALLDIRS=@MKINSTALLDIRS@

TOP=..

.SUFFIXES : .frc

FRC_FILES= \
	DipoleTest.frc \
	LJFF.frc \
	DUFF.frc \
	WATER.frc \
	EAM.u3.frc \
	EAM.u6.frc \
	EAM.VC.frc \
	Ag.u3.funcfl \
	Ag.u6.funcfl \
	Ag.VC.funcfl \
	Al.VC.funcfl \
	Au.u3.funcfl \
	Au.u6.funcfl \
	Au.VC.funcfl \
	Cu.u3.funcfl \
	Cu.u6.funcfl \
	Cu.VC.funcfl \
	Ni.u3.funcfl \
	Ni.u6.funcfl \
	Ni.VC.funcfl \
	Pd.u3.funcfl \
	Pd.u6.funcfl \
	Pd.VC.funcfl \
	Pt.u3.funcfl \
	Pt.u6.funcfl \
	Pt.VC.funcfl

all: dummy

install : 
	$(MKINSTALLDIRS) $(FORCE_PARAM_DIR)
	for i in $(FRC_FILES); do \
	  echo "Installing $$i in $(FORCE_PARAM_DIR)\n"; \
	  $(INSTALL_DATA) $$i $(FORCE_PARAM_DIR)/$$i; \
	done

tests : dummy

clean : dummy
	$(RM) *~

distclean : dummy
	$(RM) *~

devclean : distclean

depend : dummy

links: dummy

tags : dummy

dummy :
